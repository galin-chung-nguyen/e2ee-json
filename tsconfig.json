{
  "compilerOptions": {
    "baseUrl": ".",
    "sourceRoot": "src",
    "outDir": "dist",
    "module": "CommonJS",
    "target": "ESNext",
    "sourceMap": true,
    "declaration": false,
    "strict": true,
    "newLine": "LF",
    "moduleResolution": "node",
    "suppressImplicitAnyIndexErrors": false,
    "isolatedModules": false,
    "noImplicitAny": false,
    "experimentalDecorators": true,
    "strictNullChecks": true,
    "noUnusedParameters": true,
    "noUnusedLocals": false,
    "emitDecoratorMetadata": true,
    "allowSyntheticDefaultImports": true,
    "importHelpers": true,
    "noEmit": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "lib": [
      "ESNext",
      "dom",
      "ESNext.AsyncIterable"
    ],
    "typeRoots": [
      "./node_modules/@types"
    ],
    "paths": {
      "@constants": [
        "src/constants"
      ],
      "@configs": [
        "src/configs"
      ],
      "@configs/*": [
        "src/configs/*"
      ],
      "@repositories": [
        "src/repositories"
      ],
      "@repositories/*": [
        "src/repositories/*"
      ],
      "@utils": [
        "src/utils"
      ],
      "@hooks": [
        "src/hooks"
      ],
      "@routes": [
        "src/routes"
      ],
      "@interfaces": [
        "src/interfaces"
      ]
    }
  },
  "include": [
    "src",
    "**/*.ts",
    "**/*.js",
    "src/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}